/*
For some annoying reason this appears to be the only way
we can get Parcel to do global styles
*/

html, body, .figure-container-outer
  margin: 0px
  width: 100%
  background-color: white
  position relative

.figure-container-outer
  overflow: scroll
  padding 0px 0px

.figure-container-inner
  display: block
  margin 0 auto

.figure-container
  position relative
  margin 0px auto
  &>*
    /*
    This touches user code but it's super-important
    that no position info bleed through here.
    This could be revised if needed.
    */
    position relative !important

*
  box-sizing border-box

button_margin = 3px

.ui-controls, .ui-controls-hidden
  position: fixed
  width: 100vw
  top 0
  right 0
  left 0
  z-index 1000

.ui-controls-hidden
  height: 50px
  .toolbar-toggle-button
    display: none
    position absolute
    top 4px
    right 4px
  &:hover .toolbar-toggle-button
    display: flex

.ui-controls, .progress, .ui-controls-hidden
  :global
    @require "../vendor/blueprint.styl"
  *
    font-family: "San Francisco", Helvetica, sans-serif !important

.ui-controls
  position: fixed
  display: flex
  padding: 2px button_margin
  padding-right: 12px
  height: 30px
  width 100vw
  align-items: center
  flex-direction row
  justify-content space-between
  a
    text-decoration: none
    cursor: pointer
  *
    font-weight: 400
  h1
    margin: 0
    padding 0
    font-weight: 500
    font-size: 0.8em
    color #444
    text-transform: uppercase
    flex 1
    a
      color: #444
      &:hover
        color: black
  background-color: #eee
  border-bottom: 1px solid #ccc

  .buttons a
    display: inline-block
    padding: 0.1em 0.3em
    font-size: 0.8em
    border-radius 4px
    background: #ddd
    border 1px solid #ccc
    &:hover
      background: lighten(dodgerblue,20%)
      color: white

  .right-buttons
    button
      margin-right: button_margin
    margin-right: button_margin*-1

@media print
  .ui-controls
    display none
  .figure-container-outer
    padding 0 !important
