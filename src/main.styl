/*
For some annoying reason this appears to be the only way
we can get Parcel to do global styles
*/

html, body, .figure-container-outer
  margin: 0px
  width: 100%
  background-color: white
  position relative

.figure-container-outer
  overflow: scroll
  padding 0px 0px

.figure-container-inner
  display: block
  margin 0 auto

.figure-container
  position relative
  margin 0px auto
  &>*
    /*
    This touches user code but it's super-important
    that no position info bleed through here.
    This could be revised if needed.
    */
    position relative !important

*
  box-sizing border-box

button_margin = 6px

.ui-controls, .ui-controls-hidden
  position: fixed
  width: 100vw
  top 0
  right 0
  left 0
  z-index 1000

.ui-controls-hidden
  height: 50px
  .toolbar-toggle-button
    display: none
    position absolute
    top 4px
    right 4px
  &:hover .toolbar-toggle-button
    display: flex

.ui-controls, .progress, .ui-controls-hidden, .error-overlay
  :global
    @require "../vendor/blueprint.styl"
  *
    font-family: "San Francisco", Helvetica, sans-serif !important
  pre
    font-family: monospace !important

.progress
  margin 2em auto
  text-align center
  max-width 6em
  color #aaa
  p
    margin-top 2em

.ui-controls
  // Allows dragging the Electron app
  -webkit-app-region: drag
  position: fixed
  display: flex
  padding-right: 12px
  height:38px
  width 100vw
  align-items: center
  flex-direction row
  justify-content space-between
  user-select none
  &.fullscreen
    .left-buttons
      margin-left button_margin
  a
    text-decoration: none
    cursor: pointer
  *
    font-weight: 400
  h1
    font-weight: 500
    color #aaa
    font-size: 14px
    flex 1
    margin-bottom 0
    margin-top 0
    a
      color: #444
      &:hover
        color: black
  background-color: #eee
  border-bottom: 1px solid #ccc

  button:focus
    outline: none

  .right-buttons
    button
      margin-right: button_margin
    margin-right: button_margin*-1

  .left-buttons
    display flex
    margin-left: 80px
    align-items: baseline
    &>*
      display block
      margin-right: button_margin
    margin-right: button_margin*-1

.error
  .origin
    text-align right
  pre
    color: #A82A2A
  details
    summary
      color #A82A2A
      font-weight 600
      cursor pointer
      padding 0.2em 0.4em
      border-radius 0.2em
      user-select false
      &:hover
        background-color lighten(#FF7373, 20%)
      &:focus
        outline: none

.toaster
  margin-top 35px

@media print
  .ui-controls
    display none
  .figure-container-outer
    padding 0 !important
