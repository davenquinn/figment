@require '@blueprintjs/core/lib/css/blueprint.css'

*
  box-sizing border-box

html, body, #pdf-printer-figure-container-outer
  margin: 0px
  width: 100%
  height: 100vh
  background-color: white
  position relative

#pdf-printer-figure-container-outer
  overflow: scroll
  padding 25px 0px 0px

#pdf-printer-figure-container
  position relative
  display inline-block
  margin 0px auto
  &>*
    /*
    This touches user code but it's super-important
    that no position info bleed through here.
    This could be revised if needed.
    */
    position relative !important

#pdf-printer-ui-controls
  position: fixed
  display: flex
  padding: 2px 1em
  height: 25px
  width 100%
  align-items: center
  z-index 1000
  font-family: "San Francisco", Helvetica, sans-serif;
  top 0
  left 0
  right 0
  flex-direction row
  justify-content space-between
  a
    text-decoration: none
    cursor: pointer
  *
    font-weight: 400
  h1
    margin: 0
    padding 0
    font-weight: 500
    font-size: 0.8em
    color #444
    text-transform: uppercase
    flex 1
    a
      color: #444
      &:hover
        color: black
  background-color: #eee
  border-bottom: 1px solid #ccc

  .buttons a
    display: inline-block
    padding: 0.1em 0.3em
    font-size: 0.8em
    border-radius 4px
    background: #ddd
    border 1px solid #ccc
    &:hover
      background: lighten(dodgerblue,20%)
      color: white

@media print
  #pdf-printer-ui-controls
    display none
  #pdf-printer-figure-container-outer
    padding 0 !important

#pdf-printer-figure-container .task-list
  font-family: "Helvetica Neue", Helvetica, sans-serif;
  max-width: 90%
  width: 50em
  margin: 1em auto
  h2, h5
    font-weight: 400
    margin: 0
    overflow-wrap: break-word
  margin-top: 1.5em
  position:relative
  h5
    color: #aaa
  background: #eee
  padding: 1em
  *
    font-weight: 300
  ul
    list-style: none
    padding-left: 0

  li a
    text-decoration: none
    display: block
    padding: 0.1em 0.5em
    &:hover
      background-color: lighten(dodgerblue,20%)
      color: white

// Dark mode UI overrides
html, body, #pdf-printer-figure-container-outer
  background-color #222

