.task-list
  margin: 2em
  h2
    margin-top 4em
    font-size 1.2em
    .prefix
      color #aaa
      font-weight 200
  ul
    list-style none
    padding-left 0
  li a
    font-size 1.2em
    text-decoration: none
    display block
    padding 0.1em 0.5em
    margin-bottom 0.5em
    border-radius 2px
    background-color: lighten(dodgerblue,90%)
    border 1px solid lighten(dodgerblue, 80%)
    &:hover
      background-color: lighten(dodgerblue,20%)
      color: white
