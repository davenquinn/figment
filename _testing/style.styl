body
  margin: 0px
  display: flex
  flex-direction: column
  width: 100%
  height: 100vh
  background-color: white

#controls
  position: relative
  padding: 10px
  height: 1.2em
  min-height: 1.2em
  font-family: "Helvetica Neue", Helvetica, sans-serif;
  a
    text-decoration: none
    cursor: pointer
  *
    font-weight: 400
  h1
    margin: 0
    font-weight: 500
    font-size: 1.1em
    a
      color: #444
      &:hover
        color: black
  background-color: #eee
  border-bottom: 2px solid #aaa


#toggle-dev-tools
  position: absolute
  top: 10px
  right: 10px
  display: inline-block
  padding: 0.2em 0.5em
  font-size: 1em
  &:hover
    background: lighten(dodgerblue,20%)
    color: white

#main
  box-sizing: border-box
  padding: 10px
  flex-grow: 1
  overflow: scroll
  margin: 0 auto
  width: 100%
  background-color: white

body.task-list
  font-family: "Helvetica Neue", Helvetica, sans-serif;
  #main
    h2, h5
      font-weight: 400
      margin: 0
    &>div
      margin-top: 1.5em
      position:relative
      h5
        position: absolute
        top: -1.2em
        color: #aaa
      background: #eee
      padding: 10px
    *
      font-weight: 300
  ul
    list-style: none
    padding-left: 0

  li a
    text-decoration: none
    display: block
    padding: 0.1em 0.5em
    &:hover
      background-color: lighten(dodgerblue,20%)
      color: white
