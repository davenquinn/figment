*
  box-sizing border-box

body
  margin: 0px
  display: flex
  flex-direction: column
  width: 100%
  height: 100vh
  background-color: white

#pdf-printer-ui-controls
  position: relative
  padding: 2px 1em
  height: 25px
  align-items: center
  font-family: "San Francisco", Helvetica, sans-serif;
  display flex
  flex-direction row
  justify-content space-between
  a
    text-decoration: none
    cursor: pointer
  *
    font-weight: 400
  h1
    margin: 0
    padding 0
    font-weight: 500
    font-size: 0.8em
    color #444
    text-transform: uppercase
    flex 1
    a
      color: #444
      &:hover
        color: black
  background-color: #eee
  border-bottom: 1px solid #ccc

.buttons

  a
    display: inline-block
    padding: 0.1em 0.3em
    font-size: 0.8em
    border-radius 4px
    background: #ddd
    border 1px solid #ccc
    &:hover
      background: lighten(dodgerblue,20%)
      color: white

#main
  box-sizing: border-box
  padding: 0px
  flex-grow: 1
  overflow: scroll
  margin: 0 auto
  width: 100%
  background-color: white

webview
  margin: 0;
  height: 100%;
  width: 100%;

body.task-list
  font-family: "Helvetica Neue", Helvetica, sans-serif;
  #main
    .runner
      max-width: 90%
      width: 50em
      margin: 1em auto
      padding: 0.5em
    h2, h5
      font-weight: 400
      margin: 0
      overflow-wrap: break-word
    &>div
      margin-top: 1.5em
      position:relative
      h5
        color: #aaa
      background: #eee
      padding: 10px
    *
      font-weight: 300
  ul
    list-style: none
    padding-left: 0

  li a
    text-decoration: none
    display: block
    padding: 0.1em 0.5em
    &:hover
      background-color: lighten(dodgerblue,20%)
      color: white
